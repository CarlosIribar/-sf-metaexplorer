{
  "extends": "@salesforce/dev-config/tsconfig-strict-esm",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
